header
  margin-top: 5rem
  margin-bottom: 5rem
  clear: both

  .frog
    cursor: pointer
    display: inline-block
    border-bottom: 0
    vertical-align: middle
    padding-right: 1em

  .feels
    color: #01ffff // updated to active palette color
    font-family: biff
    font-size: 42px;
    vertical-align: top;
    margin-left: 1.4rem;
    display: inline-block;

  .sound
    opacity: 0.5
    cursor: pointer
    float: right
    height: 20px
    width: 25px
    background-size: contain
    background-repeat: no-repeat
    transform: translatey(10px)
    background-image: url('https://cdn.gomix.com/dc861570-69f8-4f83-af21-f748b8e9057d%2Fpaused.svg?1483216148604')
    &:hover
      opacity: 1

  .turnSoundOn
    background-image: url('https://cdn.gomix.com/dc861570-69f8-4f83-af21-f748b8e9057d%2Faudio.svg?1483216148498')
      
.emailHeader
  width: 190px
